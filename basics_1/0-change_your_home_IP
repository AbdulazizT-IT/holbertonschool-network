#!/usr/bin/env bash
# Description: This script configures localhost and facebook.com resolution

# Backup the original /etc/hosts file
cp /etc/hosts /etc/hosts.bak

# Replace the existing localhost line with 127.0.0.2
sed -i 's/^127\.0\.0\.1\s\+localhost/127.0.0.2 localhost/' /etc/hosts

# Add facebook.com mapping to 8.8.8.8 if it doesn't already exist
if ! grep -q "^8\.8\.8\.8\s\+facebook\.com" /etc/hosts; then
    echo "8.8.8.8 facebook.com" >> /etc/hosts
fi
